{
  "name": "csms",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3000",
    "dev:electron": "cross-env CSMS_ELECTRON_URL=http://localhost:3000/login concurrently -k \"npm:dev\" \"wait-on http://localhost:3000 && electron .\"",
    "build": "next build",
    "start": "next start -p 3000",
    "start:electron": "cross-env CSMS_ELECTRON_URL=http://localhost:3000/login concurrently -k \"npm:start\" \"wait-on http://localhost:3000 && electron .\"",
    "lint": "next lint",
    "set-role": "node scripts/set-role.mjs",
    "generate-icons": "node scripts/resize-icons.js",
    "make-ico": "node scripts/make-ico.mjs",
    "dist": "npm run build && npm run make-ico && electron-builder -w",
    "dist:win": "npm run build && npm run make-ico && electron-builder -w"
  },
  "main": "electron/main.js",
  "dependencies": {
    "@supabase/supabase-js": "^2.45.3",
    "clsx": "^2.1.1",
    "next": "^14.2.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "get-port": "^7.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.14.10",
    "@types/react": "^18.3.4",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.5",
    "postcss": "^8.4.41",
    "sharp": "^0.34.4",
    "tailwindcss": "^3.4.10",
    "typescript": "^5.5.4",
    "electron": "^32.2.0",
    "concurrently": "^9.0.1",
    "wait-on": "^7.2.0",
    "cross-env": "^7.0.3",
    "electron-builder": "^24.13.3",
    "png-to-ico": "^2.1.8"
  },
  "build": {
    "appId": "com.csms.app",
    "productName": "CSMS",
    "files": [
      "electron/**",
      "package.json",
      ".next/standalone/**",
      ".next/static/**",
      "public/**"
    ],
    "extraResources": [],
    "asar": true,
    "win": {
      "target": ["nsis"],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
